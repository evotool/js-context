{
	"name": "@evojs/context",
	"version": "0.1.0",
	"description": "Nodejs context storage",
	"license": "MIT",
	"main": "index.js",
	"typings": "index.d.ts",
	"scripts": {
		"prebuild": "rm -rf dist/",
		"build": "tsc --build tsconfig.build.json && node tools/build.js",
		"prepublishOnly": "npm run build && npm run test && node tools/prepublish.js",
		"release": "RELEASE_MODE=1 npm run prepublishOnly && npm publish --access public dist/",
		"test": "jest --coverage --detectOpenHandles",
		"lint": "eslint \"src/**/*.ts\" -f codeframe"
	},
	"devDependencies": {
		"@evojs/eslint-plugin": "^1.5.7",
		"@types/jest": "^26.0.24",
		"@types/node": "^16.4.10",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"jest": "^27.0.6",
		"ts-jest": "^27.0.4",
		"typescript": "^4.3.5"
	},
	"engines": {
		"node": "^10.12.0 || >=12.0.0"
	},
	"eslintConfig": {
		"ignorePatterns": [
			"/dist/",
			"coverage/",
			"node_modules/"
		],
		"root": true,
		"env": {
			"node": true
		},
		"plugins": [
			"@evojs"
		],
		"extends": [
			"plugin:@evojs/recommended"
		],
		"parserOptions": {
			"ecmaVersion": 2021
		},
		"overrides": [
			{
				"files": [
					"**/*.ts"
				],
				"env": {
					"node": true
				},
				"plugins": [
					"@evojs"
				],
				"extends": [
					"plugin:@evojs/recommended-typescript"
				],
				"parserOptions": {
					"project": "tsconfig.json",
					"sourceType": "module"
				}
			}
		]
	},
	"jest": {
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.ts"
		],
		"moduleFileExtensions": [
			"js",
			"ts"
		],
		"rootDir": "./",
		"testEnvironment": "node",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(ts|js)$": "ts-jest"
		},
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.spec.json"
			}
		}
	},
	"author": {
		"name": "Shamil Sultanov",
		"email": "shamil.amirovich@gmail.com"
	},
	"keywords": [
		"nodejs",
		"evojs",
		"async_hooks"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/evotool/js-context.git"
	},
	"bugs": {
		"url": "https://github.com/evotool/js-context/issues"
	},
	"homepage": "https://github.com/evotool/js-context#readme"
}
